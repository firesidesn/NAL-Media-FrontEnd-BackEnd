<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <center>
      <div class="container">
        <h2>Admin Dashboard</h2>
        <div class="">
          <a href="/profile?id=<%=id%>">View Profile</a>&nbsp;&nbsp;&nbsp;
          <a href="/admin/addArticle">Add Advice Article</a>
          &nbsp;&nbsp;&nbsp;
          <a href="/admin/manage">Manage Members</a> &nbsp;&nbsp;&nbsp; <a href="/logout">Logout!</a><br /><br />
        </div>
        <div>
          <h3>Advice Articles:</h3>
          <br />
          <div>
            <% articles.forEach(record => {%>
            <div>
              <strong>Title:</strong><br />
              <%= record.info.title %><br /><br />
              <strong>Content:</strong><br />
              <%= record.info.post %><br />
              <br />
              <a href="/admin/editArticle?id=<%=record.id%>">Edit Article</a><br />
              <a href="/admin/deleteArticle?id=<%=record.id%>">Delete Article</a>
            </div>
            <br /><br />
            <% })%>
          </div>
        </div>
      </div>
    </center>
  </body>
</html>
